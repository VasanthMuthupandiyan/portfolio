# Environment Variables for PHYSIO REHAB CLINIC Portfolio
# Copy this file to .env and customize values for your local development

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Base URL for the application (automatically detected by environment)
# - Development mode: automatically uses '/' for clean localhost URLs
# - Production mode: automatically uses '/portfolio/' for GitHub Pages
# - Override: Set VITE_BASE_URL to customize (e.g., '/custom-path/' or '/')
# 
# Examples:
# VITE_BASE_URL=/                    # For custom domain or localhost
# VITE_BASE_URL=/portfolio/          # For GitHub Pages (default in production)
# VITE_BASE_URL=/my-custom-repo/     # For different repository name
#
# Leave commented out to use automatic detection:
# VITE_BASE_URL=/portfolio/

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application title (used in global constants)
# Default: PHYSIO REHAB CLINIC
VITE_APP_TITLE=PHYSIO REHAB CLINIC

# =============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# =============================================================================

# Development server port
# Default: 5173
VITE_DEV_PORT=5173

# Allow external connections to dev server
# Set to 'true' to access from other devices on network
# Default: false
VITE_DEV_HOST=false

# Automatically open browser when dev server starts
# Default: false
VITE_DEV_OPEN=false

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Output directory for build files
# Default: dist
VITE_BUILD_DIR=dist

# Generate source maps for debugging
# Set to 'true' for production debugging, 'false' for smaller builds
# Default: true in development, false in production
VITE_SOURCE_MAP=false

# =============================================================================
# EXTERNAL SERVICES (if needed)
# =============================================================================

# API endpoints (if you add backend integration)
# VITE_API_URL=https://api.example.com

# EmailJS configuration (already configured in Contact component)
# VITE_EMAILJS_SERVICE_ID=your_service_id
# VITE_EMAILJS_TEMPLATE_ID=your_template_id
# VITE_EMAILJS_PUBLIC_KEY=your_public_key

# =============================================================================
# ANALYTICS & MONITORING (optional)
# =============================================================================

# Google Analytics tracking ID
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# =============================================================================
# NOTES
# =============================================================================

# 1. Only variables prefixed with VITE_ will be exposed to the client code
# 2. Never commit sensitive data like API keys to version control
# 3. For GitHub Pages deployment, VITE_BASE_URL should match your repository path
# 4. In CI/CD, these can be set as environment variables instead of using .env files